[project]
name = "{{ config.package_name }}"
version = "0.1.0"
description = ""
authors = [{ name = "{{ config.organization_name }}", email = "{{ config.organization_email }}" }]
readme = "README"
requires-python = ">=3.12"
dependencies = ["git-remote-s3 (>=0.2.5,<0.3.0)"]

[tool.poetry]
packages = [{ include = "*", from = "src" }]

[tool.poetry.group.dev.dependencies]
pytest = "^8.2.2"
pytest-cov = "^5.0.0"
tox = "^4.15.1"
black = ">=24.4.2,<25.0.0"

[build-system]
requires = ["poetry-core>=2.0.0,<3.0.0"]
build-backend = "poetry.core.masonry.api"

[[tool.poetry.source]]
name = "codeartifact"
url = "https://{{ config.codeartifact.codeartifact_domain }}-{{ config.codeartifact.codeartifact_domain_owner }}.d.codeartifact.{{ config.codeartifact.codeartifact_region }}.amazonaws.com/pypi/{{ config.codeartifact.codeartifact_repo }}/simple/"
priority = "supplemental"
